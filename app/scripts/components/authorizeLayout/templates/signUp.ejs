<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-2 col-xs-1" style=""></div>
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10" style="">
  <div class="center-box"><h1> EASY ORDER </h1>    
    <a href="">     
      <div class="avatar-box">
        <div class="avatar"><img src="app/styles/images/avatar.png"></div>
      </div>
    </a>
      <div class="form-container">
      <h3> Sign up </h3>
        <form role="form" action="#" method="post"> 
          <div class="form-container-left col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="form-group">
              <label for="name">Name or company name</label>
              <input name="name" type="text" class="form-control" id="name" required="required" size="50">
            </div>
            <div class="form-group">
              <label for="zip_code">ZIP Code</label>
              <input name="zipcode" type="text" class="form-control" id="zip_code">
            </div>
            <div class="form-group">
              <label for="city">City</label>
              <input name="city" type="text" class="form-control" id="city">
            </div>
          </div>
            <div class="form-container-right col-xs-12 col-sm-12 col-md-6 col-lg-6">
              <div class="form-group">
                <label for="address">Address</label>
                <input name="address" type="text" class="form-control" id="address">
                </div>
              <div class="form-group">
                <label for="email">E-mail</label>
                <input name="email" type="email" class="form-control" id="email" required="required">
              </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input name="password" type="password" class="form-control" id="password" required="required">
                </div> 
            </div>
            <div class="form-help3">  
              <button type="submit" class="btn signup_button" style=""> SIGN UP </button>            
            </div>
        </form>
          <div class="form-bottom">
            <a class="logination" href="">I already have an account</a>
          </div>
        </div>
      </div>                                                          
    </div>  
  <div class="col-lg-3 col-md-3 col-sm-2 col-xs-1" style=""></div>                                                            
</div>